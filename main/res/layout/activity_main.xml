<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.korisnik.eatpizza.MainActivity">

    <ImageView
        android:id="@+id/pizzaClick"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pizza1" />

    <ImageView
        android:layout_toLeftOf="@id/score"
        android:id="@+id/scorePic"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/pizza1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PizzasPerTap: "
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/taps"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:text="PizzasPerSecond: "
        android:id="@+id/PizPerSec"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIZZA SHOP"
        android:textStyle="bold"
        android:id="@+id/shop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
